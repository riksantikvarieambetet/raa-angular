{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}